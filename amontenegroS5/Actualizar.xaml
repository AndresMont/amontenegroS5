<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="amontenegroS5.Actualizar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Actualizar "
                HorizontalOptions="CenterAndExpand" />

            <Entry x:Name="txtCodigo" Placeholder=" Ingrese codigo" Keyboard="Numeric" />
            <Entry x:Name="txtNombre" Placeholder="Nombre" />
            <Entry x:Name="txtApellido" Placeholder="Apellido" />
            <Entry x:Name="txtEdad" Placeholder=" Ingrese edad" Keyboard="Numeric" />


            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Button x:Name="btnActualizar" Text="Actualizar" Clicked="btnActualizar_Clicked" Grid.Row="0" Grid.Column="0"/>
                <Button x:Name="btnEliminar" Text="Eliminar" Clicked="btnEliminar_Clicked" Grid.Row="0" Grid.Column="1"/>
            </Grid>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>